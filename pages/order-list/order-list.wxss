page {
  background-color: #eee;
}

.order:last-child{
    margin-bottom: 18rpx;
}

.v-img{
    width:100rpx;
    height:100rpx; 
    margin-right: 30rpx;
    float:left
}
.v-img.none,.v-text.none{
    height: 70rpx;
}

.v-text{
    float:left;
    width:565rpx;
    padding-right: 25rpx;
}
 


.v-text text{
    line-height: 40rpx;
}

.v-text .title{
    max-width: 380rpx;
    display: inline-block;
    overflow: hidden;
    height: 40rpx;
    text-overflow:ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
}

.v-text .order-state{
    float:right;
    color:rgba(0, 0, 0, .65);
    font-size: 30rpx;
}

.v-text .time{
    display:block;
    color:rgba(0, 0, 0, .65);
    font-size: 28rpx;
}

.v-text .commodity-size{
    display:block;
    color:rgba(0, 0, 0, .65);
    font-size: 28rpx;
}

.v-text .remark{
    height: 40rpx;
    text-overflow:ellipsis;
    white-space: nowrap;
    max-width: 380rpx;
    display: inline-block;
    overflow: hidden;
}

.arrow{
    color: rgba(0, 0, 0, .65);
}

.arrow:before,.arrow::after{ 
    border-width: 12rpx;
    top: 50%;
    margin-top: -10rpx;
    right:-8rpx;
}

.d-title.arrow:before{
    border-left-color:rgba(0, 0, 0, .65);
    right:-10rpx;
}


.noorder{
    text-align: center;
    margin-top: 30%; 
}
.noorder text{
    color: #ccc;
}


.loadmore{
    text-align: center;
    padding: 0.1rem 0rem;
}

.loadmore text{
    padding: 10rpx 20rpx;
    text-align: center;
    color: #000;
    border-radius: 6rpx; 
    display: inline-block;
}

.btn{
    line-height:40rpx;
    border:1px solid orangered;
    padding:8rpx 20rpx;
}

.process{
    position:relative; 
    overflow: hidden;
    height: 40rpx;
    display: none;
}

.process .line{
    background-color:#ccc;
    height:14rpx;
    border-radius:10rpx;
    position:absolute; 
    top:30%;
    width: 694rpx;
}

.process .line.active-1{
    background-color:#1afa29; 
    width: 10%;
}

.process .line.active-2{
    background-color:#1afa29; 
    width: 50%;
}

.process .line.active-3{
    background-color:#1afa29; 
    width: 694rpx;
}

.process .point{
    display:inline-block;
    width:28rpx;
    height:28rpx;
    background-color:#ccc;
    border-radius:50%;
    position:absolute;
    top:30%; 
    margin-top: -8rpx;
}

.process .point.active{
     background-color:#1afa29;
}


.process  .point .state-text{
    position:absolute;
    width:160rpx;
    top:36rpx;
    font-size:24rpx;
    left:-60rpx;
    text-align:center;
}

.process .point.point-1{
    left:10%;
}

.process .point.point-2{
    left:50%;
    margin-left:14rpx;
}

.process .point.point-3{
    right:10%;
}

